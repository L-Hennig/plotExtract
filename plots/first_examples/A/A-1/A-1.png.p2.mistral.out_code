markers = {
    "Blank": ('x', 'gray'),
    "COL 0.125µg/mL": ('s', 'black'),
    "MINO 1µg/mL": ('^', 'black'),
    "COL 0.125µg/mL + MEM 4µg/mL": ('o', 'black'),
    "COL 0.125µg/mL + MINO 1µg/mL": ('^', 'black'),
    "MEM 4µg/mL": ('o', 'black'),
    "RFP 0.06µg/mL": ('v', 'black'),
    "COL 0.125µg/mL + RFP 0.06µg/mL": ('v', 'black')
}

