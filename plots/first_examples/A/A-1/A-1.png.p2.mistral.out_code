}

plt.figure()
for label, points in data.items():
    x_vals, y_vals = zip(*points)
    marker, color = markers[label]
    linestyle = linestyles[label]
    plt.plot(x_vals, y_vals, label=label, marker=marker, color=color, linestyle=linestyle)

plt.xlabel('Time (h)')
plt.ylabel('Log cfu/mL')
plt.ylim(0, 16)
plt.xlim(0, 26)
plt.legend()

